{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
  <p>Welcome to  {{ title }}</p>
  <table>
      <tr>{% for uses in data[0]|keys %}
          <th>{{ uses }}</th>
      {% endfor %}</tr>
    {% for comment in data %}
     <tr>
         <td> To post #{{ comment.postId}} </td>
         <td> <a href="{{ '/comments/'~comment.id }}">{{ comment.id}}</a></td>
         <td>{{ comment.name}} </td>
         <td>{{ comment.email}} </td>
         <td>{{ comment.body}} </td>
     </tr>
    {% endfor %}
  </table>
{% endblock %}
